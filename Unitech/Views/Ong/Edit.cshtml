@model Unitech.Models.Ong

@{
    ViewData["Title"] = "Edit";
}

<script>
        $.ajax({
            url: @Url.action("Edit", "Ong")
            type: "POST",
            data: $(form).serialize(),
            datatype: "json",
            sucess: function(response){
                $("#content").html(response);
            };
            error: funtion(response){
                $("#content").html(response);
            };
        })
</script>
<h1>Editar ONG</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" id="content"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    <script>
        $("#content").click(function(form){
        $.ajax({
            url: @Url.action("Edit", "Ong")
            type: "POST",
            data: $(form).serialize(),
            datatype: "json",

        })
        }
</script>
}
