@{
    ViewData["Title"] = "Create";
}

<h1>Cadastrar ONG</h1>

<div class="row">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <div>ID: <input type="text" id="Ide" value=""/></div>
                <div> Descricao: <input type="text" id="descricao" value=""/></div>
                <div class="form-group">
                    <input type="submit" class="btn btn-primary" id="envio" name="data"/>
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {

    <script src="~/lib/jquery/dist/jquery.js"></script>
    
    <script >
        $("#envio").click(function () {
            $.ajax({
                type: "POST",
                url: "@Url.Action("Create", "Ong")",
                //data:
                success: function (response) {
                    alert("Tudo certo" + response);
                },
                error: function (response) {
                    alert("Tudo errado" + response);
                },
            });
        });
    </script>

}
