@model Unitech.Models.Pessoa

@{
    ViewData["Title"] = "Create";
}
<h1>Criar Novo</h1>

<hr />
<div class="row">
    <div class="col-md-4" id="">
        <form>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ong_ID" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                <select asp-for="Ong_ID" class="form-control" asp-items="ViewBag.Selecionador"></select>
                <span asp-validation-for="Ong_ID" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Ong_ID" class="control-label"></label>
                <input asp-for="Ong_ID" class="form-control" />
                <span asp-validation-for="Ong_ID" class="text-danger"></span>
             <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" id="envio"/>
    </div>
    </form>
</div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    <script>
        $("#envio").click(function(form){
            $.ajax({
                type: "POST",
                URL: @Url.Action("Index", "pessoa"),
                typedata: "json",
                data: $(form).serialize
            });
        }
    </script>
}
}